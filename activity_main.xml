<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" 
    tools:context=".MainActivity" >
     
    <LinearLayout 
        android:id="@+id/layout_rom_info"
     	android:layout_width="match_parent"
    	android:layout_height="wrap_content"
    	android:padding="5dp"
    	android:orientation="horizontal" >
    	
        <TextView
   		android:id="@+id/text_current_rom_label"
	        android:layout_width="100dp"
	        android:layout_height="wrap_content"
	        android:text="@string/current_rom_label" />
       
   	<TextView
   		android:id="@+id/text_current_rom"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:text="@string/current_rom" />
        
    </LinearLayout>
    
    <LinearLayout 
        android:id="@+id/layout_boot_info"
   	android:layout_width="match_parent"
    	android:layout_height="wrap_content"
    	android:padding="5dp"
    	android:orientation="horizontal" >
    	
        <TextView
   		android:id="@+id/text_current_boot_label"
	        android:layout_width="100dp"
	        android:layout_height="wrap_content"
	        android:text="@string/current_boot_label" />
       
   	<TextView
   		android:id="@+id/text_current_boot"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:text="@string/current_boot" />
        
    </LinearLayout>
    
    <LinearLayout 
        android:id="@+id/layout_recovery_info"
   	android:layout_width="match_parent"
    	android:layout_height="wrap_content"
    	android:padding="5dp"
    	android:orientation="horizontal" >
    	
        <TextView
   		android:id="@+id/text_current_recovery_label"
	        android:layout_width="100dp"
	        android:layout_height="wrap_content"
	        android:text="@string/current_recovery_label" />
       
   	<TextView
   		android:id="@+id/text_current_recovery"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:text="@string/current_recovery" />
        
    </LinearLayout>

    <LinearLayout 
        android:id="@+id/layout_sdcard_info"
   	android:layout_width="match_parent"
    	android:layout_height="wrap_content"
    	android:padding="5dp"
    	android:orientation="horizontal" >
    	
        <TextView
   		android:id="@+id/text_current_sdcard_label"
	        android:layout_width="100dp"
	        android:layout_height="wrap_content"
	        android:text="@string/current_sdcard_label" />
       
   	<TextView
   		android:id="@+id/text_current_sdcard"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:text="@string/current_sdcard" />
        
    </LinearLayout>
    
    <LinearLayout 
        android:id="@+id/layout_menu"
   	android:layout_width="match_parent"
    	android:layout_height="match_parent"
    	android:orientation="vertical"  >
   		
        <Button	
        	android:id="@+id/button_flash_saved_boot"
        	style="@style/ButtonStyle" 
        	android:text="@string/menu_text_1"  />

        <Button	
        	android:id="@+id/button_flash_recovery"
        	style="@style/ButtonStyle" 
        	android:text="@string/menu_text_2"  />
        
        <Button	
        	android:id="@+id/button_update_kernel"
         	style="@style/ButtonStyle" 
        	android:text="@string/menu_text_3"  />
                
        <Button	
        	android:id="@+id/button_flash_boot_from_zip"
        	style="@style/ButtonStyle" 
        	android:text="@string/menu_text_4"  />
        
        <Button	
        	android:id="@+id/button_exit_lunartools"
        	style="@style/ButtonStyle" 
	       	android:text="@string/menu_text_exit"  /> 
                                		
    </LinearLayout>                    
    

</LinearLayout>
